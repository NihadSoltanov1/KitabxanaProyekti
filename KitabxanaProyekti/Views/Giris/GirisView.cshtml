
@{
    Layout = null;
}


<!DOCTYPE html>
<html lang="en">

<head>
    <title>Material Login Form a Responsive Widget Template :: w3layouts</title>
    <!-- meta tags -->
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="keywords" content="Art Sign Up Form Responsive Widget, Audio and Video players, Login Form Web Template, Flat Pricing Tables, Flat Drop-Downs, Sign-Up Web Templates,
		Flat Web Templates, Login Sign-up Responsive Web Template, Smartphone Compatible Web Template, Free Web Designs for Nokia, Samsung, LG, Sony Ericsson, Motorola Web Design" />
    <!-- /meta tags -->
    <!-- custom style sheet -->
    <link href="~/weblogin/css/style.css" rel="stylesheet" type="text/css" />
    <!-- /custom style sheet -->
    <!-- fontawesome css -->
    <link href="~/weblogin/css/fontawesome-all.css" rel="stylesheet" />
    <!-- /fontawesome css -->
    <!-- google fonts-->
    <link href="//fonts.googleapis.com/css?family=Raleway:100,100i,200,200i,300,300i,400,400i,500,500i,600,600i,700,700i,800,800i,900,900i"
          rel="stylesheet">
    <!-- /google fonts-->

</head>


<body>
    <h1>Mərkəzi Kitabxana</h1>
    <div class=" w3l-login-form">
        <h2>Giriş Et</h2>
        @using (Html.BeginForm("GirisView", "Giris", FormMethod.Post))
        {
            <div class=" w3l-form-group">
                <label>Mail Adresiniz:</label>
                <div class="group">
                    <i class="fas fa-user"></i>
                    <input type="text" class="form-control" name="Mail" placeholder="E-mail Ünvanınız" required="required" />
                </div>
            </div>
            <div class=" w3l-form-group">
                <label>Şifrə:</label>
                <div class="group">
                    <i class="fas fa-unlock"></i>
                    <input type="password" class="form-control" name="Sifre" placeholder="Şifrə" required="required" />
                </div>
            </div>
            <div class="forgot">
                <a href="#">Şifrəni Unuttun?</a>
                <p><input type="checkbox">Məni Xatırla</p>
            </div>
            <button type="submit">Giriş Et</button>
        }
        <p class=" w3l-register-p">Hesabın Yoxdur?<a href="/Qeydiyyat/QeydiyyatView" class="register"> Qeydiyyatdan Keç</a></p>
    </div>
    <footer>
        <p class="copyright-agileinfo"> &copy; Kitabxanamızın Müəllif Hüquqları Qorunur. Bütün Hüqüqlar Gizlidir | Design by <a href="http://w3layouts.com">W3layouts</a></p>
    </footer>

</body>

</html>